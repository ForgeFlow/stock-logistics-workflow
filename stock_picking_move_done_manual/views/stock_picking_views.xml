<odoo>

        <record id="view_picking_form" model="ir.ui.view">
            <field name="name">stock.picking.form</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='move_ids_without_package']/tree" position="inside">
                    <button name="action_manual_done_from_picking"
                            string="Complete"
                            type="object"
                            icon="fa-check"
                            attrs="{'invisible': [('state', 'in', ['done', 'cancel'])]}"
                    />
                </xpath>
                <xpath expr="//field[@name='move_line_ids_without_package']/tree" position="inside">
                    <button name="action_move_manual_done_from_picking"
                            string="Complete"
                            type="object"
                            icon="fa-check"
                            attrs="{'invisible': [('state', 'in', ['done', 'cancel'])]}"
                    />
                </xpath>
            </field>
        </record>

</odoo>
